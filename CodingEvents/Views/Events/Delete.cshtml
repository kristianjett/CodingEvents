@using CodingEvents.Models

@model List<Event>

<h1>Delete Events</h1>

<form method="post">
    @foreach (Event codeEvent in Model)
    {
        <div class="form-group">
            <label>
                <span>@codeEvent.Name</span>
                <input type="checkbox" name="eventIds" value="@codeEvent.Id" class="form-control" />
            </label>
        </div>
    }

    <input type="submit" name="Delete Selected Events" class="btn btn-danger" />
</form>
