@using CodingEvents.Models

@model List<Event>

<p>
    <a asp-controller="Events" asp-action="Add">Add Event</a>
</p>

@if (Model.Count > 0)
{
    <p>
        <a asp-controller="Events" asp-action="Delete">Delete Event</a>
    </p>
}



@if (Model.Count == 0)
{
    <p>No events yet!</p>
}
else
{
    <table class="table">
        <tr>
            <th>ID</th>
            <th>Event</th>
            <th>Description</th>
            <th>Location</th>
            <th>Category</th>
        </tr>
        @foreach (Event codeEvent in Model)
        {
            <tr>
                <td>@codeEvent.Id</td>
                <td><a asp-controller="Events" asp-action="Detail" asp-route-id="@codeEvent.Id">@codeEvent.Name</a></td>
                <td>@codeEvent.Description</td>
                <td>@codeEvent.Location</td>
                <td>@codeEvent.Category.Name</td>
            </tr>
        }
    </table>
}

