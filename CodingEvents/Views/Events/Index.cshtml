@using CodingEvents.Models

@model List<Event>

<p>
    <a asp-controller="Events" asp-action="Add">Add Event</a>
</p>

@if (Model.Count > 0)
{
    <p>
        <a asp-controller="Events" asp-action="Delete">Delete Event</a>
    </p>
}



@if (Model.Count == 0)
{
    <p>No events yet!</p>
}
else
{
    <table class="table">
        <tr>
            <th>ID</th>
            <th>Event</th>
            <th>Description</th>
            <th>Location</th>
            <th>Max Attendees</th>
            <th>Contact Email</th>
            <th>Type</th>
        </tr>
        @foreach (Event codeEvent in Model)
        {

    <tr>
        <td style="font-weight: bold">@codeEvent.Id</td>
        <td style="font-weight: bold">@codeEvent.Name</td>
        <td style="font-weight: lighter">@codeEvent.Description</td>
        <td style="font-weight: lighter">@codeEvent.Location</td>
        <td style="font-weight: lighter">@codeEvent.AttendanceLimit</td>
        <td style="font-weight: lighter">@codeEvent.ContactEmail</td>
        <td style="font-weight: lighter">@codeEvent.Type</td>
        <td><a asp-controller="Events" asp-action="Edit" asp-route-id="@codeEvent.Id">Edit Event</a></td>

    </tr>
        }
    </table>
}

