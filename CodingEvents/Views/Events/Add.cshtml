
@using CodingEvents.ViewModels;
@model AddEventViewModel;

<h1>Add Event</h1>

<form asp-controller="Events" asp-action="Add" method="post">
    <div class="form-group">
        <label asp-for="Name">Event Name</label>
        <input asp-for="Name" placeholder="Event Name" />
        <span asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description">Event Description</label>
        <input asp-for="Description" placeholder="Event Description" />
        <span asp-validation-for="Description"></span>
    </div>
    <div class="form-group">
        <label asp-for="Location">Event Location</label>
        <input asp-for="Location" placeholder="Event Location" />
        <span asp-validation-for="Location"></span>
    </div>
    <div class="form-group">
        <label asp-for="AttendanceLimit">Attendance Limit</label>
        <input asp-for="AttendanceLimit" placeholder="Attendance Limit" />
        <span asp-validation-for="AttendanceLimit"></span>
    </div>
    <div class="form-group">
        <label asp-for="ContactEmail">Contact Email</label>
        <input asp-for="ContactEmail" placeholder="Contact Email" />
        <span asp-validation-for="ContactEmail"></span>
    </div>
    <div class="form-group">
        <label asp-for="Type">Event Types</label>
        <select asp-for="Type" asp-items="Model.EventTypes"></select>
    </div>
    <input type="submit" value="Add Event" />
</form>