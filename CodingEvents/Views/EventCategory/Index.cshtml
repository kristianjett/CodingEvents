@using CodingEvents.Models

@model List<EventCategory>

<h1>Event Categories</h1>

@if (Model.Count == 0)
{
    <p>Nothing to see here!</p>
}
else
{
    <table class="table">
        <tr>
            <th>Category</th>
        </tr>
        @foreach (EventCategory category in Model)
        {

            <tr>
                <td style="font-weight: bold">@category.Name</td>
            </tr>
        }
    </table>
}